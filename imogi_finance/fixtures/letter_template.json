[
  {
    "doctype": "Letter Template",
    "name": "Payment Letter Default",
    "template_name": "Payment Letter Default",
    "letter_type": "Payment Letter",
    "is_active": 1,
    "is_default": 1,
    "body_html": "<div style=\"font-family: 'Segoe UI', Arial, sans-serif; font-size: 11pt; color: #1a1a2e; max-width: 800px; margin: 0 auto; padding: 40px; background: #ffffff;\">\n  {% if header_image_url %}\n  <div style=\"text-align: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 3px solid #2c3e50;\">\n    <img src=\"{{ header_image_url }}\" alt=\"Header\" style=\"max-width: 280px; height: auto;\" />\n  </div>\n  {% endif %}\n\n  <!-- Company Header -->\n  <table style=\"width: 100%; margin-bottom: 30px;\">\n    <tr>\n      <td style=\"vertical-align: top; width: 60%;\">\n        <div style=\"font-size: 16pt; font-weight: 700; color: #2c3e50; margin-bottom: 6px;\">{{ company_name }}</div>\n        {% if company_address %}\n        <div style=\"color: #5a6c7d; font-size: 10pt; line-height: 1.6;\">{{ company_address }}</div>\n        {% endif %}\n      </td>\n      <td style=\"vertical-align: top; text-align: right; width: 40%;\">\n        <div style=\"background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%); color: #ffffff; padding: 15px 20px; border-radius: 8px;\">\n          <div style=\"font-size: 9pt; text-transform: uppercase; letter-spacing: 1px; opacity: 0.9;\">Surat Tagihan</div>\n          <div style=\"font-size: 11pt; font-weight: 600; margin-top: 4px;\">{{ letter_date }}</div>\n        </div>\n      </td>\n    </tr>\n  </table>\n\n  <!-- Letter Details -->\n  <table style=\"width: 100%; margin-bottom: 25px; background: #f8f9fa; border-radius: 8px; padding: 15px;\">\n    <tr>\n      <td style=\"padding: 8px 15px;\">\n        <span style=\"color: #6c757d; font-size: 9pt; text-transform: uppercase; letter-spacing: 0.5px;\">Nomor Surat</span><br/>\n        <span style=\"font-weight: 600; color: #2c3e50;\">{{ letter_number }}</span>\n      </td>\n      <td style=\"padding: 8px 15px;\">\n        <span style=\"color: #6c757d; font-size: 9pt; text-transform: uppercase; letter-spacing: 0.5px;\">Perihal</span><br/>\n        <span style=\"font-weight: 600; color: #2c3e50;\">{{ subject }}</span>\n      </td>\n    </tr>\n  </table>\n\n  <!-- Recipient -->\n  <div style=\"margin-bottom: 25px; padding: 20px; border-left: 4px solid #3498db; background: #f8f9fa;\">\n    <div style=\"color: #6c757d; font-size: 9pt; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 8px;\">Kepada Yth.</div>\n    <div style=\"font-size: 13pt; font-weight: 700; color: #2c3e50; margin-bottom: 5px;\">{{ customer_name }}</div>\n    {% if customer_address %}\n    <div style=\"color: #5a6c7d; line-height: 1.5;\">{{ customer_address }}</div>\n    {% endif %}\n    {% if customer_city %}\n    <div style=\"color: #5a6c7d;\">{{ customer_city }}</div>\n    {% endif %}\n  </div>\n\n  <!-- Letter Body -->\n  <div style=\"margin-bottom: 25px; line-height: 1.7;\">\n    <p style=\"margin: 0 0 15px 0;\">Dengan hormat,</p>\n    <p style=\"margin: 0 0 20px 0; text-align: justify;\">\n      Sehubungan dengan {{ transaction_type }} yang telah kami lakukan, berikut kami sampaikan\n      permintaan pembayaran dengan rincian sebagai berikut:\n    </p>\n  </div>\n\n  <!-- Invoice Details Box -->\n  <div style=\"margin-bottom: 25px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;\">\n    <div style=\"background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%); color: #ffffff; padding: 12px 20px; font-weight: 600; font-size: 11pt;\">\n      <span style=\"margin-right: 8px;\">ğŸ“‹</span> Rincian Tagihan\n    </div>\n    <table style=\"width: 100%; border-collapse: collapse;\">\n      <tbody>\n        <tr style=\"border-bottom: 1px solid #e9ecef;\">\n          <td style=\"padding: 14px 20px; width: 35%; color: #6c757d; background: #f8f9fa;\">Nomor Invoice</td>\n          <td style=\"padding: 14px 20px; font-weight: 600; color: #2c3e50;\">{{ invoice_number }}</td>\n        </tr>\n        <tr style=\"border-bottom: 1px solid #e9ecef;\">\n          <td style=\"padding: 14px 20px; color: #6c757d; background: #f8f9fa;\">Tanggal Invoice</td>\n          <td style=\"padding: 14px 20px; color: #2c3e50;\">{{ invoice_date }}</td>\n        </tr>\n        <tr style=\"border-bottom: 1px solid #e9ecef;\">\n          <td style=\"padding: 14px 20px; color: #6c757d; background: #f8f9fa;\">Jatuh Tempo</td>\n          <td style=\"padding: 14px 20px; color: #e74c3c; font-weight: 600;\">{{ due_date }}</td>\n        </tr>\n        <tr style=\"border-bottom: 1px solid #e9ecef; background: #fff8e1;\">\n          <td style=\"padding: 16px 20px; color: #6c757d; background: #f8f9fa; font-weight: 600;\">Total Tagihan</td>\n          <td style=\"padding: 16px 20px; font-size: 14pt; font-weight: 700; color: #27ae60;\">{{ amount }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 14px 20px; color: #6c757d; background: #f8f9fa;\">Terbilang</td>\n          <td style=\"padding: 14px 20px; font-style: italic; color: #5a6c7d;\">{{ amount_in_words }}</td>\n        </tr>\n      </tbody>\n    </table>\n  </div>\n\n  <!-- Bank Account Box -->\n  <div style=\"margin-bottom: 25px; border: 1px solid #dee2e6; border-radius: 10px; overflow: hidden;\">\n    <div style=\"background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%); color: #ffffff; padding: 12px 20px; font-weight: 600; font-size: 11pt;\">\n      <span style=\"margin-right: 8px;\">ğŸ¦</span> Rekening Pembayaran\n    </div>\n    <div style=\"padding: 5px 0;\">\n      <table style=\"width: 100%; border-collapse: collapse;\">\n        <tbody>\n          <tr style=\"border-bottom: 1px solid #e9ecef;\">\n            <td style=\"padding: 14px 20px; width: 35%; color: #6c757d; background: #f8f9fa;\">Bank</td>\n            <td style=\"padding: 14px 20px; font-weight: 600; color: #2c3e50;\">{{ bank_name }}</td>\n          </tr>\n          <tr style=\"border-bottom: 1px solid #e9ecef;\">\n            <td style=\"padding: 14px 20px; color: #6c757d; background: #f8f9fa;\">Atas Nama</td>\n            <td style=\"padding: 14px 20px; font-weight: 600; color: #2c3e50;\">{{ account_name }}</td>\n          </tr>\n          <tr>\n            <td style=\"padding: 14px 20px; color: #6c757d; background: #f8f9fa;\">No. Rekening</td>\n            <td style=\"padding: 14px 20px; font-size: 13pt; font-weight: 700; color: #2c3e50; letter-spacing: 1px;\">{{ account_number }}</td>\n          </tr>\n        </tbody>\n      </table>\n    </div>\n  </div>\n\n  <!-- Proof of Payment -->\n  <div style=\"margin-bottom: 30px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 20px; border-radius: 10px; border: 1px solid #dee2e6;\">\n    <div style=\"font-weight: 600; color: #2c3e50; margin-bottom: 12px;\">\n      <span style=\"margin-right: 8px;\">ğŸ“§</span> Konfirmasi Pembayaran\n    </div>\n    <p style=\"margin: 0 0 12px 0; color: #5a6c7d; font-size: 10pt;\">Setelah pembayaran dilakukan, mohon kirimkan bukti transfer ke:</p>\n    <table style=\"width: 100%;\">\n      <tr>\n        <td style=\"padding: 8px 0;\">\n          <span style=\"display: inline-block; background: #3498db; color: #ffffff; padding: 6px 12px; border-radius: 5px; font-size: 10pt; margin-right: 10px;\">Email</span>\n          <span style=\"font-weight: 600; color: #2c3e50;\">{{ proof_email }}</span>\n        </td>\n      </tr>\n      <tr>\n        <td style=\"padding: 8px 0;\">\n          <span style=\"display: inline-block; background: #27ae60; color: #ffffff; padding: 6px 12px; border-radius: 5px; font-size: 10pt; margin-right: 10px;\">WhatsApp</span>\n          <span style=\"font-weight: 600; color: #2c3e50;\">{{ proof_whatsapp }}</span>\n        </td>\n      </tr>\n    </table>\n  </div>\n\n  <!-- Closing -->\n  <div style=\"margin-bottom: 40px; line-height: 1.7;\">\n    <p style=\"margin: 0;\">Atas perhatian dan kerja samanya, kami ucapkan terima kasih.</p>\n  </div>\n\n  <!-- Signature -->\n  <div style=\"margin-top: 40px;\">\n    <div style=\"display: inline-block; text-align: center; min-width: 200px;\">\n      <div style=\"color: #6c757d; font-size: 10pt; margin-bottom: 60px;\">Hormat kami,</div>\n      <div style=\"border-top: 2px solid #2c3e50; padding-top: 10px;\">\n        <div style=\"font-weight: 700; color: #2c3e50; font-size: 12pt;\">{{ signer_name }}</div>\n        <div style=\"color: #6c757d; font-size: 10pt;\">{{ signer_title }}</div>\n      </div>\n    </div>\n  </div>\n\n  {% if footer_image_url %}\n  <div style=\"text-align: center; margin-top: 40px; padding-top: 20px; border-top: 1px solid #dee2e6;\">\n    <img src=\"{{ footer_image_url }}\" alt=\"Footer\" style=\"max-width: 100%; height: auto;\" />\n  </div>\n  {% endif %}\n</div>"
  }
]
